{
  "name": "instant-win-lottery-backend",
  "version": "1.0.0",
  "main": "dist/server.js",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "prebuild": "node -e \"const fs=require('fs'); const isRailway=process.env.RAILWAY_ENVIRONMENT||process.env.DATABASE_URL?.includes('postgresql'); const schema=isRailway?'schema.postgresql.prisma':'schema.sqlite.prisma'; fs.copyFileSync('prisma/'+schema,'prisma/schema.prisma'); console.log('Using schema:',schema);\"",
    "build": "prisma generate && prisma db push --skip-generate && tsc && cp -r assets dist/ && cp -r fonts dist/",
    "build:local": "dotenv -e .env -o -- npm run build",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "postinstall": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "db:use-sqlite": "cp prisma/schema.sqlite.prisma prisma/schema.prisma && prisma generate",
    "db:use-postgres": "cp prisma/schema.postgresql.prisma prisma/schema.prisma && prisma generate",
    "seed": "ts-node prisma/seed.ts",
    "seed:e2e": "ts-node prisma/seed-e2e.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "bcrypt": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "jsonwebtoken": "^9.0.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.12",
    "pdfkit": "^0.13.0",
    "qrcode": "^1.5.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/multer": "^2.0.0",
    "@types/node": "^18.15.11",
    "@types/nodemailer": "^7.0.4",
    "@types/pdfkit": "^0.12.9",
    "@types/qrcode": "^1.5.0",
    "better-sqlite3": "^12.5.0",
    "dotenv-cli": "^11.0.0",
    "prisma": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
